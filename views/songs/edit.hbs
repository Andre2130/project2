<form action="/playlists/{{playlistId}}/songs/{{song._id}}?_method=PUT" method="POST">
    <label for="name">Name</label>
    <input type="text" name="name" value="{{song.name}}">

    <label for="price">Price</label>
    <input type="number" name="price" value="{{song.price}}" step="any">

    <input type="submit" value="Edit">
</form>